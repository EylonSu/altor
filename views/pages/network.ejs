<script src="js/network.js"></script>
<% layout('boilerplate') %>
<a name="about"></a>
<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="text-center">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1 class="title-one ">Welcome to <%= network.name %> network page</h1>
                        <hr class="intro-divider">
                        <h3>Select a branch</h3>
                        <div class="list-group">
                            <% network.branches.forEach(function(branch){ %>
                            <a href=/branch?branch=<%= branch._id.toString() %> class="list-group-item list-group-item-action"><%=branch.name %></a>
                            <% }); %>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
