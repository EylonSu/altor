<% layout('boilerplate') %>
<div class="container">
    <div class="row">
        <div class="text-center">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="intro-message">
                    <h1 class="title-one"><%= title %></h1>
                    <h3>Mange your life</h3>
                    <h2><%= messege%></h2>
                    <hr class="intro-divider">
                    <form action="/searchResults" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="srchItem" id="srchItem">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

 <% if (user && user.role == 'client') { %>
<div class="container">
    <div class="row">
        <div class="text-center">
            <!--Appointments table-->
            <h1 class="title-one">Your upcoming appointments</h1>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Branch name</th>
                    <th>Date & Time</th>
                    <th>Service</th>
                    <th>Cancel appointment</th>
                </tr>
            </thead>
            <tbody>
                <% user.appointments.forEach(function(app){ %>
                <tr>
                    <td><%= app.branch_name %></td>
                    <td><%= moment(app.date_and_time).format( 'dddd, MMMM Do YYYY, h:mm:ss a') %></td>
                    <td><%= app.service.name %></td>
                    <td><a type="button" class="btn btn-danger" href="/deleteAppointment?appToDel=(<%= app%>)">Cancel Appointment</a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
<!--Appointments table-->
<% } %>
