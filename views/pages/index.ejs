<% layout('boilerplate') %>
<head>
    <style>
        .loader {
            border: 16px solid #f3f3f3;
            border-radius: 50%;
            border-top: 16px solid #3498db;
            width: 40px;
            height: 40px;
            -webkit-animation: spin 2s linear infinite;
            animation: spin 2s linear infinite;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
        }

        @-webkit-keyframes spin {
            0% { -webkit-transform: rotate(0deg); }
            100% { -webkit-transform: rotate(360deg); }
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
    <script src="js/index.js"></script>
</head>

<div class="container">
    <div class="row">
        <div class="text-center">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="intro-message">
                    <h1 class="title-one"><%= title %></h1>
                    <h3>Mange your life</h3>
                    <h2><%= messege%></h2>
                    <hr class="intro-divider">
                    <form action="/searchResults" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="srchItem" id="srchItem">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Appointments table-->
 <% if (user && user.role == 'client') { %>
<section id ="appTable">
<div class="container">
    <div class="row">

        <% if (user.appointments.length > 0){ %>
        <div class="text-center">
            <h1 class="title-one">Your upcoming appointments</h1>
        </div>
        <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Branch name</th>
                    <th>Date & Time</th>
                    <th>Service</th>
                    <th>More actions</th>
                </tr>
            </thead>
            <tbody>
            <% var i = 0%>
                <% user.appointments.forEach(function(app){ %>
                <tr id="cancel_row_<%=i%>">
                    <td><%= app.branch_name %></td>
                    <td><%= moment(app.date_and_time).format( 'dddd, MMMM Do YYYY, h:mm:ss a') %></td>
                    <td><%= app.service.name %></td>
                    <td><button  onclick="confirmCancel('/deleteAppointment?appToDel=<%= JSON.stringify(app)%>',<%=i%>)" type="button" class="btn btn-danger">Cancel Appointment</button></br><button style="margin-top: 10px"  onclick="confirmReplacment('/appOfferedFoReplacement?offeredApp=<%= JSON.stringify(app)%>&clientId=<%= user._id.toString()%>',<%=i%>)" type="button" class="btn btn-warning">Switch Appointment</button></td>
                </tr>
            <%i++%>
                <% }); %>
            </tbody>
        </table>
        </div>
        </span>
        <!--Appointments table-->
        <% } else {%>
        <div class="text-center">
            <h1 class="title-one">No upcoming appointments. Schedual one now!</h1>
        </div>
        <% } %>
    </div>
</div>
</section>
<% } %>


<!--replace table -->

<% if (user && user.role == 'client') { %>
<section id="replace"></section>
<div class="container">
    <div class="row">

        <% if (user.waiting_for_confirim.length > 0){ %>
        <div class="text-center">
            <h1 class="title-one">Interchangeable appointments that waiting for approval</h1>
        </div>
        <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Branch name</th>
                <th> Date & Time</th>
                <th>Service</th>
                <th>Approve</th>
            </tr>
            </thead>
            <tbody>
            <% var i = 0%>
            <% user.waiting_for_confirim.forEach(function(apps){ %>
            <tr id="approve_row_<%=i%>">
                <td><%= apps.newApp.branch_name%></td>
                <td>Current: <%= moment(apps.oldApp.date_and_time).format( 'dddd, MMMM Do YYYY, h:mm:ss a') %> </br>Suggested: <%= moment(apps.newApp.date_and_time).format( 'dddd, MMMM Do YYYY, h:mm:ss a') %></td>
                <td><%= apps.oldApp.service.name %></td>
                <!--<td>Suggested: <%= moment(apps.newApp.date_and_time).format( 'dddd, MMMM Do YYYY, h:mm:ss a') %></td>-->
                <td><button  onclick="switchApps('<%= JSON.stringify(apps)%>')" type="button" class="btn btn-success">Approve replacement</button></td>
            </tr>
            <%i++%>
            <% }); %>
            </tbody>
        </table>
        </div>
        </span>
        <!--Appointments table-->
        <% } else {%>
        <div class="text-center">
            <h1 class="title-one">You have no replacement offers</h1>
        </div>
        <% } %>
    </div>
</div>
</section>
<% } %>




