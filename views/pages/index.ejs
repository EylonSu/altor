<% layout('boilerplate') %>
<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1><%= title %></h1>
                    <h3>Mange your life</h3>
                    <h2><%= messege%></h2>
                    <hr class="intro-divider">
                    <form action="/searchResults" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="srchItem" id="srchItem">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    <% if (user && user.role == 'client') { %>
                    <div> You are logged in as a user! email: <%= user.email %></div>
                    <% } else if (user) { %>
                    <div> You are logged in as a business! email: <%= user.email %></div>
                    <% } %>
                </div>
            </div>
        </div>

    </div>
</div>