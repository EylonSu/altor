<% layout('boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1><span class="fa fa-sign-in"></span>Business sign up</h1>
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <!-- SignUp FORM -->
            <form action="/business-sign-up" method="post">
                <div class="form-group">
                    <label>Business Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Manager name</label>//to insert here a js code that create n input text box
                    <input type="text" class="form-control" name="manager">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Category</label><!-- to insert here a js code that create n input text box -->
                    <input type="text" class="form-control" name="category">
                </div>
                <div class="form-group">
                    <label>Enter logo-picture path</label>
                    <input type="text" class="form-control" name="picturePath">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                    <label>Country</label>
                    <input type="text" class="form-control" name="country">
                </div>
                <div class="form-group">
                    <label>City</label>
                    <input type="text" class="form-control" name="city">
                </div>
                <div class="form-group">
                    <label>Street</label>
                    <input type="text" class="form-control" name="street">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Signup</button>
            </form>
            <hr>
            <p>Already have an account? <a href="/login">Login</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
</div>