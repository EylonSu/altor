 <% layout('boilerplate') %>
<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1><span class="fa fa-sign-in"></span>Add branch</h1>
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <!-- Add Branch -->
            <form action="/add-branch" method="post" id="branchAdditionForm">
                <div class="form-group">
                    <label>Branch name:</label>
                    <input type="text" class="form-control" name="branchName" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" class="form-control" name="phone" required>
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Add branch</button>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#branchAdditionForm').validate()});
</script>